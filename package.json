{
  "name": "ocome",
  "version": "1.0.0",
  "description": "Desktop (React + Vite) and Mobile (React Native + Expo) monorepo",
  "private": true,
  "type": "module",
  "packageManager": "pnpm@8.0.0",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev:web": "pnpm --filter web dev",
    "dev:mobile": "pnpm --filter mobile dev",
    "build:web": "pnpm turbo run build --filter=web",
    "build:mobile": "pnpm turbo run build --filter=mobile",
    "build": "pnpm turbo run build",
    "test": "pnpm turbo run test",
    "lint": "pnpm turbo run lint",
    "type-check": "pnpm turbo run type-check"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "eslint": "^8.0.0",
    "prettier": "^3.0.0",
    "turbo": "^1.10.0",
    "typescript": "^5.3.0"
  }
}
